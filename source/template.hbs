<html>
    <head>
        <title>Depleted Earth</title>
        <meta name="viewport" content="width=device-width, initial-scale=1">

        <style>
            :root {
                --content-width: 1000px;
                --text-width: 664px;
                --gutter: 16px;
                /* (--text-width) + 2 * (--gutter) */
                --text-width-and-gutter: 696px;
                --banner-border-rad: 12px;
            }


            html, body {
                font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
                margin: 0px;
                padding: 0px
            }

            footer {
                font-size: 12px;
                text-align: center;
                margin-top: 256px;
                margin-bottom: 32px;
                color: #444;

            }

            a {
                color: rgb(93, 119, 189);
                transition-property: color;
                transition-duration: 0.5s;
            }

            a:hover {
                color: rgb(144, 173, 255);
            }

            footer a {
                color: #444;
            }

            footer a:hover {
                color: rgb(0, 0, 0);
            }

            header {
                position: relative;
                overflow: auto;
            }

            header .title {
                text-align: center;
                color: white;
                font-size: 64px;
                margin-top: 128px;
                margin-bottom: 0px;
                text-shadow: 0px 0px 10px rgb(0,0,0,1), 0px 0px 40px rgb(0,0,0,1);
            }

            header .description {
                text-align: center;
                color: white;
                padding-top: 16px;
                padding-bottom: 24px;
                margin-top: 0px;
                margin-bottom: 80px;
                max-width: 460px;
                text-shadow: 0px 0px 15px rgb(0,0,0,1), 0px 0px 5px rgb(0,0,0,1);
            }

            header .container {
                position: absolute;
                top: 0px;
                bottom: 0px;
                left: 0px;
                right: 0px;
                z-index: -1;
                background-color: black;
            }

            header img {
                height: 120%;
                position: absolute;
                right: 0px;
                bottom: 0px;
            }

            header .detail {
                color: #444;
                margin-left: 8px;
                margin-bottom: 8px;
            }

            header .detail a {
                color: #444;
            }

            header .detail a:hover {
                color: rgb(255, 255, 255);
            }

            .content {
                max-width: var(--content-width);
                margin: auto;
            }

            .text {
                max-width: var(--text-width);
                margin: auto;
                margin-top:var(--gutter);
                margin-bottom:var(--gutter);
                padding-left: var(--gutter);
                padding-right: var(--gutter);
            }

            h2.text {
                margin-top: 1em;
            }

            p.text {
                font-size: 18px;
                line-height: 1.4em;
            }

            .banner {
                overflow:auto;
                position: relative;
                background-color: rgba(0, 0, 0, 0.1);
                border-radius: var(--banner-border-rad);
            }

            .banner .background-image {
                background-position: center;
                background-size: cover;
                position: absolute;
                top: 0px;
                left: 0px;
                bottom: 0px;
                right: 0px;
                z-index: -1;

                transition-property: -moz-filter, -ms-filter, -o-filter, -webkit-filter, filter;
                transition-duration: 2s;

                border-radius: var(--banner-border-rad);
            }

            @media screen and (max-width: 1000px) {
                .banner .background-image {
                    border-radius: 0px;
                }

                .banner {
                    border-radius: 0px;
                }
            }

            .detail {
                font-weight: light;
                color: #CCC;
                font-size: 8px;
            }

            .resource .hanging {
                margin: auto;
                position: relative;
                top: 8px;
                height: 0px;
                padding-left: 8px;
                padding-right: 8px;
                overflow: visible;
            }

            @media screen and (max-width: var(--text-width-and-gutter)) {
                .resource .hanging {
                    padding-left: var(--gutter);
                    padding-right: var(--gutter);
                }
            }

            .resource .attribution {
                text-align: end;
                padding-left: 55%;
            }

            .detail a {
                color: #CCC;
                transition-property: color;
                transition-duration: 0.5s;
            }

            .detail a:hover {
                color: rgb(0, 0, 0);
            }

            .banner .description {
                text-align: center;
                font-weight: bold;
                padding-left: 15px;
                padding-right: 15px;
                color: white;
                font-size: 48px;
                text-shadow: 0px 0px 10px rgb(0,0,0,1), 0px 0px 40px rgb(0,0,0,1);
            }

            .greyed-out .background-image {
                filter: grayscale() brightness(0.6);
            }

            .year {
                display: block;
                font-size: 32px;
                font-weight: bolder;
                text-align: center;
                margin: auto;
                margin-bottom: 0px;
                margin-top: 0px;
                width: 100px;
                border: 4px solid black;
                border-radius: 8px;
            }

            .bulb {
                margin: auto;
                height: 16px;
                width: 16px;
                border-radius: 32px;
                background-color: black;
            }

            .bulb.top {
                margin-top: 64px;
            }

            .bulb.dot {
                margin-bottom: 16px;
            }

            .bulb.bottom {
                margin-bottom: 256px;
            }

            .separator {
                width: 2px;
                height: 64px;
                background-color: black;
                margin: auto;
            }

            .spacer {
                height: 32px;
            }

        </style>
        <script>
            const elements = document.getElementsByClassName("resource");
            window.addEventListener("scroll", function() {
                for (element of elements) {
                    let middleOffset = (element.offsetTop + element.offsetHeight / 2)
                    if (window.scrollY > middleOffset - (window.innerHeight / 2)) {
                        if (element.classList && !element.classList.contains("greyed-out")) {
                            element.classList.toggle("greyed-out")
                        }
                    } else if (window.scrollY < (element.offsetTop) - window.innerHeight) {
                        if (element.classList && element.classList.contains("greyed-out")) {
                            element.classList.toggle("greyed-out")
                        }
                    }
                }
            });
        </script>
    </head>
    <body>
        <header>
            <div class="container">
                <img src="https://upload.wikimedia.org/wikipedia/commons/6/6c/2014-_Warmest_Year_On_Record_%2816292052951%29.jpg"/>
            </div>
            <h1 class="title">
                {{title}}
            </h1>
            <p class="description text">
                {{overview}}
            </p>
            <p class="detail"><a href="https://commons.wikimedia.org/wiki/File:2014-_Warmest_Year_On_Record_(16292052951).jpg">Image source</a></p>
        </header>
        <div class="content">
            <div class="bulb top"></div>
            <div class="separator"></div>
            {{#each timeline}}
                {{#if isResource}}
                    <div class="resource" id="{{id}}">
                        <div class="banner">
                            <div class="background-image" style="background-image: url({{imageURL}});{{style}}"></div>
                            {{#if description}}
                                <p class="description">
                                    {{description}}
                                </p>
                            {{/if}}
                        </div>
                        {{#if source}}
                            <p class="source detail hanging">
                                <a href="{{source}}">Source</a>
                            </p>
                        {{/if}}
                        {{#if attribution}}
                            <p class="attribution detail hanging">
                                {{{attribution}}}
                            </p>
                        {{/if}}
                    </div>
                {{/if}}
                {{#if isYear}}
                    <p class="year">{{year}}</p>
                {{/if}}
                {{#if isSeparator}}
                    <div class="separator"></div>
                    {{!-- <div class="bulb"></div> --}}
                {{/if}}
                {{#if isSpacer}}
                    <div class="spacer"></div>
                    {{!-- <div class="bulb"></div> --}}
                {{/if}}
                {{#if isHeader}}
                    <h2 class="text">
                        {{{text}}}
                    </h2>
                {{/if}}
                {{#if isParagraph}}
                    <p class="text">
                        {{{text}}}
                    </p>
                {{/if}}
                {{#if isBulb}}
                    <div class="bulb"></div>
                {{/if}}
            {{/each}}
        </div>
        <footer>
            <p>All images from <a href="https://commons.wikimedia.org">Wikimedia Commons</a> &middot; Created by <a href="/">Julian Fortune</a></p>
        </footer>
    </body>
</html>